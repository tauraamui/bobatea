import lib.term.ui as tui
import time

struct App {
mut:
	tui &tui.Context = unsafe { nil }
	event_count int
	frame_count int
	last_event_time time.Time
	last_frame_time time.Time
}

fn event(e &tui.Event, x voidptr) {
	mut app := unsafe { &App(x) }
	app.event_count++
	app.last_event_time = time.now()
	
	if e.typ == .key_down && e.code == .escape {
		exit(0)
	}
	
	// Print event info to demonstrate high-frequency event handling
	if e.typ == .key_down {
		println('Event ${app.event_count}: Key pressed: ${e.code}')
	}
}

fn frame(x voidptr) {
	mut app := unsafe { &App(x) }
	app.frame_count++
	app.last_frame_time = time.now()

	app.tui.clear()
	app.tui.set_bg_color(r: 63, g: 81, b: 181)
	app.tui.draw_rect(20, 6, 60, 15)
	
	app.tui.set_color(r: 255, g: 255, b: 255)
	app.tui.draw_text(24, 8, 'Dual Loop TUI Test')
	app.tui.draw_text(24, 10, 'Events: ${app.event_count}')
	app.tui.draw_text(24, 11, 'Frames: ${app.frame_count}')
	app.tui.draw_text(24, 13, 'Press any key to test input responsiveness')
	app.tui.draw_text(24, 14, 'Press ESC to exit')
	
	app.tui.set_cursor_position(0, 0)
	app.tui.reset()
	app.tui.flush()
}

fn main() {
	mut app := &App{}
	app.tui = tui.init(
		user_data:   app
		event_fn:    event
		frame_fn:    frame
		hide_cursor: true
		frame_rate:  30  // 30 FPS for rendering
	)
	
	println('Starting dual-loop TUI application...')
	println('Input events will be processed at ~1000Hz')
	println('Rendering will occur at 30Hz')
	println('Press ESC to exit')
	
	app.tui.run()!
}